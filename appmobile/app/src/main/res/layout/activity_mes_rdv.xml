<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!--Header-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#0077CB"
        android:gravity="center_vertical">

        <!--Lien prise de rdv-->
        <TextView
            android:id="@+id/lien_mes_rdv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/prendre_un_rdv"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="start" />

        <!--Lien profil-->
        <TextView
            android:id="@+id/lien_profil"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/mon_profil"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center" />

        <!--Lien dÃ©connexion-->
        <TextView
            android:id="@+id/lien_deconnexion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/d_connexion"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!--Afficher logo et Mes prochain rendez-vous-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/vitalis"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mes_prochains_rendez_vous"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>


    <!--Liste mes rdv MODIFIER ICII!!!!-->

    <!--Footer-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:orientation="vertical"
            android:padding="16dp">

            <ListView
                android:id="@+id/listRdv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnannulerrdv"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:text="Annulation Rendez-Vous" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/footer"
        android:textSize="12sp"
        android:textColor="#000000" />
</LinearLayout>
