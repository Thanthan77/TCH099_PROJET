<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!--Header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0077CB"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!--Lien retour-->
        <TextView
            android:id="@+id/btn_retour_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="←"
            android:textColor="#FFFFFF"
            android:textSize="29dp" />


    </LinearLayout>

    <!--Afficher logo et Modifier mon mot de passe-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/vitalis" />

        <TextView
            android:id="@+id/modifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/modifier_mon_mot_de_passe"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--Formulaire changement de mot de passe-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:background="#F0F0F0"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:backgroundTintMode="src_in"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:backgroundTint="#F0F0F0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="mot de passe actuel"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/ancien_mdp"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="nouveau mot de passe"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/nouveau_mdp"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="confirmer le nouveau de passe"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/confirmer_mdp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="14sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <!--Bouton appliquer changement-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_appliquer_changement"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rounded"
            android:text="Appliquer le changement"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/footer_modifier_mdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/footer"
        android:textColor="#000000"
        android:textSize="12sp" />
</LinearLayout>
